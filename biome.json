{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": ["warn", 10],
			"no-console": "warn",
			"semi": ["error", "always"],
			"quotes": ["error", "single"],
			"eqeqeq": ["error", "always"],
			"recommended": true,
			"correctness": {
				"noChildrenProp": "error",
				"useExhaustiveDependencies": "warn",
				"useHookAtTopLevel": "error",
				"useJsxKeyInIterable": "error"
			},
			"security": {
				"noDangerouslySetInnerHtmlWithChildren": "error"
			},
			"suspicious": {
				"noCommentText": "error",
				"noDuplicateJsxProps": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentStyle": "space",
		"indentWidth": 2,
		"trailingComma": "all",
		"quoteStyle": "single"
	},
	"overrides": [
		{
			"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
			"exclude": ["node_modules"]
		}
	]
}
